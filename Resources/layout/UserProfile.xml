<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffbb33">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1">
            <ImageView
                android:src="@drawable/ic_baseline_account_box_24dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/imageView1" />
            <TextView
                android:text="Profile Name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtUserProfile_Name"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2">
            <ImageView
                android:src="@drawable/ic_baseline_monetization_on_24dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/imageView1" />
            <TextView
                android:text="Coins"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtUserProfile_Coins"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3">
            <ImageView
                android:src="@drawable/ic_baseline_monetization_on_24dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/imageView1" />
            <TextView
                android:text="XP"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtUserProfile_XP"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4">
            <ImageView
                android:src="@drawable/ic_baseline_account_box_24dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/imageView1" />
            <TextView
                android:text="Wins"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtUserProfile_Wins"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout5">
            <ImageView
                android:src="@drawable/ic_baseline_account_box_24dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/imageView1" />
            <TextView
                android:text="Loses"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtUserProfile_Loses"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation" />
</RelativeLayout>

